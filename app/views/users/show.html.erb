<div class="nav_bar">
    <span class="nav_link"><%= link_to 'home',  :controller => "home", :action => "index"  %></span>
    <span class="menu_text">PROFILE</span>
    <span></span>
</div>

<div class="profile">
    <%= image_tag("/user_images/#{@user.icon_image_name}", :class => "user_icon") %>
    <div class="profile_name">name:<%= @user.username %></div>
    <div class="profile_student_number">number:<%= @user.student_number %></div> 
    <div class="profile_room">room:<%= @user.location.room %></div>
    <div class="profile_comment">comment:<%= @user.comment %></div>
</div>

<% if current_user.id == @user.id %>
    <%= link_to(user_edit_path(id: current_user.id)) do %>
            <div class="edit_btn">edit</div>
    <% end %>
<% end %>
