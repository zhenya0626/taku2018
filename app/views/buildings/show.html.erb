<div class="nav_bar">
    <span class="nav_link"><%= link_to(:controller => "home", :action => "index") do %><%= image_tag('back.png', :class => "back_img") %><% end %></span>
    <span class="menu_text"><%= @building.name %></span>
    <span></span>
</div>

<div class="contents">
        <% (1..@building.storey).each do |n| %>
            <div class="floor">
                <div class="floor_title"><%= n %>éšŽ</div> 
                <ul class="floor_list">
                <% @locations.each do |location| %>
                    <% if n == location.floor %>
                    <li class="room">
                    <div class="room_name"><%= location.room %><%= button_to 'enter',  location_id_path(location_id:location.id, building_id: @building.id) , :method => :post %></div>
                    
                    <% @users.each do |user| %>
                        <% if user.location_id == location.id %>
                            <div class="user">
                                <%= image_tag("/user_images/#{user.icon_image_name}", :class => "user_icon") %>
                                <span class="users"><%= user.username%></span>
                            </div> 
                        <% end %>
                    <% end %>
                    </li>
                    <% end %>
                <% end %>
                </ul>
            </div>
        <% end %>
    </div>
</div>

